<h1>Articles Listing Page</h1>
<table>
  <thead>
  <tr>
    <td>Title</td><td>Description</td><td colspan="3">Actions</td>
  </tr>
  </thead>
  <%@article.each do |article| %>
    <tr>
      <td><%=article.title %></td>
      <td><%=article.description%></td>
      <td><%= link_to 'Show', article_path(article)%></td>
      <td><%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: "Are you sure?"} %>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
    </tr>
  <%end %>
</table>
<p>
<td><%= link_to 'Create New Article', new_article_path %></td>
</p>
